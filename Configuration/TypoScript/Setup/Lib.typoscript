lib.yoastSEO {
    currentURL = TEXT
    currentURL {
        stdWrap.typolink {
            parameter = #
            returnLast = url
            forceAbsoluteUrl = 1
            addQueryString = 1
            addQueryString.exclude = type,no_cache
            useCacheHash = 1
        }

        htmlSpecialChars = 1
    }

    canonicalURL = TEXT
    canonicalURL {
        stdWrap.typolink {
            parameter.field = {$plugin.tx_yoastseo.canonicalTagField}
            parameter.ifEmpty = #

            forceAbsoluteUrl = 1
            returnLast = url
            addQueryString = 1
            addQueryString.exclude = type,no_cache
            useCacheHash = 1
        }
    }

    robotInstructions = COA
    robotInstructions {
        10 = TEXT
        10.value = noindex
        10.if.equals.field = {$plugin.tx_yoastseo.noIndexField}
        10.if.value = 1

        11 = TEXT
        11.value = index
        11.if.equals.field = {$plugin.tx_yoastseo.noIndexField}
        11.if.value = 0

        20 = TEXT
        20.value = ,

        30 = TEXT
        30.value = nofollow
        30.if.equals.field = {$plugin.tx_yoastseo.noFollowField}
        30.if.value = 1

        31 = TEXT
        31.value = follow
        31.if.equals.field = {$plugin.tx_yoastseo.noFollowField}
        31.if.value = 0
    }

    pageTitle = TEXT
    pageTitle.field = {$plugin.tx_yoastseo.titleField} // title

    pageTitleComplete = COA
    pageTitleComplete {
        10 = TEXT
        10.value = {$plugin.tx_yoastseo.titlePrepend}
        10.stdWrap.noTrimWrap = || |

        20 =< lib.yoastSEO.pageTitle

        30 = TEXT
        30.value = {$plugin.tx_yoastseo.titleAppend}
        30.stdWrap.noTrimWrap = | ||

        stdWrap.trim = 1
    }

    pageTitlePrepend = COA
    pageTitlePrepend {
        10 = TEXT
        10 {
            value = {$plugin.tx_yoastseo.titlePrepend}
            stdWrap.noTrimWrap = || |
        }
    }

    pageTitleAppend = COA
    pageTitleAppend {
        10 = TEXT
        10 {
            value = {$plugin.tx_yoastseo.titleAppend}
            stdWrap.noTrimWrap = | ||
        }
    }

    description = TEXT
    description {
        field = {$plugin.tx_yoastseo.descriptionField}
    }

    locale = TEXT
    locale {
        data = TSFE:config|config|locale_all
        htmlSpecialChars = 1
    }

    slug < .currentURL
    slug {
        stdWrap.typolink {
            parameter = #
            returnLast = url
            forceAbsoluteUrl = 0
            useCacheHash = 1
            addQueryString = 1
            addQueryString.exclude = type,no_cache
        }

        htmlSpecialChars = 1
    }

    pathOverride = TEXT
    pathOverride {
        field = tx_realurl_pathsegment
    }

    og {
        siteName = TEXT
        siteName.value < sitetitle

        type = TEXT
        type.value = website

        title = TEXT
        title.field = {$plugin.tx_yoastseo.og.titleField} // {$plugin.tx_yoastseo.titleField} // title

        description = TEXT
        description.field = {$plugin.tx_yoastseo.og.descriptionField} // {$plugin.tx_yoastseo.descriptionField}

        fbAdmins = TEXT
        fbAdmins.value = {$plugin.tx_yoastseo.og.fbAdmins}

        fbAppId = TEXT
        fbAppId.value = {$plugin.tx_yoastseo.og.fbAppId}

        images = FILES
        images {
            references {
                table = pages
                uid.data = page:uid
                fieldName = {$plugin.tx_yoastseo.og.imageField}
            }
            renderObj = TEXT
            renderObj {
                typolink {
                    parameter.stdWrap {
                        cObject = IMG_RESOURCE
                        cObject {
                            file.import.data = file:current:uid
                            file.treatIdAsReference = 1
                        }
                    }
                    returnLast = url
                    forceAbsoluteUrl = 1
                }

            }
        }

        fallBackImages = FILES
        fallBackImages {
            references {
                table = pages
                uid.data = leveluid : 0
                fieldName = tx_yoastseo_settings_facebook_image
            }
            renderObj = TEXT
            renderObj {
                typolink {
                    parameter.stdWrap {
                        cObject = IMG_RESOURCE
                        cObject {
                            file.import.data = file:current:uid
                            file.treatIdAsReference = 1
                        }
                    }
                    returnLast = url
                    forceAbsoluteUrl = 1
                }
            }
        }
    }

    twitter {
        site = TEXT
        site.value = {$plugin.tx_yoastseo.twitter.site}

        card = TEXT
        card.value = summary

        title = TEXT
        title.field = {$plugin.tx_yoastseo.twitter.titleField} // {$plugin.tx_yoastseo.titleField} // title

        description = TEXT
        description.field = {$plugin.tx_yoastseo.twitter.descriptionField} // {$plugin.tx_yoastseo.descriptionField}

        images = FILES
        images {
            references {
                table = pages
                uid.data = page:uid
                fieldName = {$plugin.tx_yoastseo.twitter.imageField}
            }
            maxItems = 1
            renderObj = TEXT
            renderObj {
                typolink {
                    parameter.stdWrap {
                        cObject = IMG_RESOURCE
                        cObject {
                            file.import.data = file:current:uid
                            file.treatIdAsReference = 1
                        }
                    }
                    returnLast = url
                    forceAbsoluteUrl = 1
                }

            }
        }

        fallBackImages = FILES
        fallBackImages {
            references {
                table = pages
                uid.data = leveluid : 0
                fieldName = tx_yoastseo_settings_twitter_image
            }
            renderObj = TEXT
            renderObj {
                typolink {
                    parameter.stdWrap {
                        cObject = IMG_RESOURCE
                        cObject {
                            file.import.data = file:current:uid
                            file.treatIdAsReference = 1
                        }
                    }
                    returnLast = url
                    forceAbsoluteUrl = 1
                }
            }
        }
    }
}

[globalVar = GP:L > 0]
    lib.yoastSEO {
        og {
            images.references.table = pages_language_overlay
            images.references.uid >
            images.references.pid.data = page:uid
        }

        twitter {
            images.references.table = pages_language_overlay
            images.references.uid >
            images.references.pid.data = page:uid
        }
    }

[global]